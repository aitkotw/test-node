{
  "name": "mpc-enclave-server",
  "version": "1.0.0",
  "description": "MPC-based two-party signing service running in AWS Nitro Enclave",
  "type": "module",
  "main": "index.ts",
  "scripts": {
    "start": "node --loader tsx index.ts",
    "dev": "MOCK_MPC=true KEYSTORE_TYPE=memory PORT=5000 node --loader tsx index.ts",
    "build": "tsc",
    "test": "MOCK_MPC=true KEYSTORE_TYPE=memory node --loader tsx --test **/*.test.ts"
  },
  "keywords": [
    "mpc",
    "threshold-signature",
    "ecdsa",
    "ethereum",
    "enclave",
    "nitro"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "node-vsock": "^0.0.5",
    "ethers": "^6.9.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
